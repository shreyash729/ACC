#include<iostream>
using namespace std;
// logic: number of spaces = (no. of total rows - row number)
int main(){
    int a;
    cout<<"Enter number of rows: ";
    cin>>a;
    for(int i =1; i<=a; i++){
        for(int k = 1; k <= (a-i); k++){
                cout<<" ";
            }
        for(int j = 1; j <= (2*i - 1); j++){
             cout<<"*";
            }
        cout<<endl;
    }
    return 0;
}
